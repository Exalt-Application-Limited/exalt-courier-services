# Payout Service Environment Configuration Template
# Copy this file to .env and update the values for your environment

# Service Configuration
SERVER_PORT=8204
SPRING_PROFILES_ACTIVE=dev
SERVICE_NAME=payout-service

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=payout_db
DB_USERNAME=payout_user
DB_PASSWORD=secure_password
DB_SSL=false
DB_POOL_SIZE=10

# Payout Configuration
DEFAULT_PAYOUT_FREQUENCY=weekly
MINIMUM_PAYOUT_AMOUNT=50.00
MAXIMUM_PAYOUT_AMOUNT=10000.00
PAYOUT_CURRENCY=USD
AUTO_PAYOUT_ENABLED=true
INSTANT_PAYOUT_ENABLED=true
INSTANT_PAYOUT_FEE=0.5

# Bank Transfer Configuration
BANK_TRANSFER_ENABLED=true
ACH_ENABLED=true
WIRE_TRANSFER_ENABLED=true
INTERNATIONAL_TRANSFER_ENABLED=true
BANK_TRANSFER_PROCESSING_DAYS=3
SAME_DAY_ACH_ENABLED=true

# Digital Wallet Configuration
PAYPAL_ENABLED=true
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
STRIPE_ENABLED=true
STRIPE_SECRET_KEY=your_stripe_secret_key
VENMO_ENABLED=true
CASHAPP_ENABLED=true

# Payment Processor Configuration
PAYMENT_PROCESSOR_PRIMARY=stripe
PAYMENT_PROCESSOR_SECONDARY=paypal
FALLBACK_PROCESSOR_ENABLED=true
MULTI_PROCESSOR_ROUTING=true

# Security Configuration
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRES_IN=24h
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
ENCRYPTION_KEY=your-encryption-key-here
PCI_COMPLIANCE_ENABLED=true

# Fraud Detection Configuration
FRAUD_DETECTION_ENABLED=true
VELOCITY_CHECK_ENABLED=true
MAX_DAILY_PAYOUT_AMOUNT=5000.00
MAX_WEEKLY_PAYOUT_AMOUNT=20000.00
SUSPICIOUS_ACTIVITY_THRESHOLD=3
BLACKLIST_CHECK_ENABLED=true

# Tax Configuration
TAX_REPORTING_ENABLED=true
FORM_1099_GENERATION=true
TAX_YEAR_END_PROCESSING=true
WITHHOLDING_TAX_ENABLED=false
INTERNATIONAL_TAX_COMPLIANCE=true

# Verification Configuration
IDENTITY_VERIFICATION_REQUIRED=true
BANK_VERIFICATION_REQUIRED=true
SSN_VERIFICATION_ENABLED=true
ADDRESS_VERIFICATION_ENABLED=true
DOCUMENT_VERIFICATION_ENABLED=true

# Fee Configuration
PAYOUT_FEE_PERCENTAGE=0.0
FLAT_PAYOUT_FEE=0.0
RUSH_DELIVERY_FEE=2.50
INTERNATIONAL_FEE_PERCENTAGE=0.05
CURRENCY_CONVERSION_FEE=0.02

# Scheduling Configuration
PAYOUT_SCHEDULE_CRON=0 0 9 * * MON
RETRY_FAILED_PAYOUTS=true
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_MINUTES=60
BATCH_PROCESSING_ENABLED=true
BATCH_SIZE=100

# Notification Configuration
EMAIL_NOTIFICATIONS_ENABLED=true
SMS_NOTIFICATIONS_ENABLED=true
PAYOUT_SUCCESS_NOTIFICATIONS=true
PAYOUT_FAILURE_NOTIFICATIONS=true
VERIFICATION_NOTIFICATIONS=true

# Reconciliation Configuration
DAILY_RECONCILIATION=true
AUTO_RECONCILIATION_ENABLED=true
RECONCILIATION_TOLERANCE_AMOUNT=1.00
MANUAL_REVIEW_THRESHOLD=100.00

# Cache Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=6
PAYOUT_CACHE_TTL_SECONDS=1800
VERIFICATION_CACHE_TTL_SECONDS=3600

# Monitoring Configuration
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
PROMETHEUS_METRICS_ENABLED=true
TRANSACTION_MONITORING=true
PERFORMANCE_TRACKING=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_LEVEL_PAYOUT=DEBUG
LOG_PATTERN_CONSOLE=%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs/payout-service.log
LOG_SENSITIVE_DATA=false

# Service Discovery
EUREKA_SERVER_URL=http://localhost:8761/eureka
EUREKA_INSTANCE_HOSTNAME=localhost

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
PAYOUT_REQUEST_RATE_LIMIT_PER_MINUTE=100
API_RATE_LIMIT_PER_MINUTE=500

# Integration Configuration
COMMISSION_SERVICE_URL=http://commission-service:8200
NOTIFICATION_SERVICE_URL=http://notification-service:8091
KYC_SERVICE_URL=http://kyc-service:8089
PAYMENT_SERVICE_URL=http://payment-processing-service:8092

# Compliance Configuration
AML_SCREENING_ENABLED=true
OFAC_SCREENING_ENABLED=true
PEP_SCREENING_ENABLED=true
SANCTIONS_SCREENING_ENABLED=true
REGULATORY_REPORTING=true

# Performance Configuration
CONNECTION_POOL_SIZE=30
CONNECTION_TIMEOUT_MS=10000
READ_TIMEOUT_MS=30000
PAYOUT_PROCESSING_TIMEOUT_MS=60000

# Webhook Configuration
WEBHOOK_ENABLED=true
WEBHOOK_RETRY_ENABLED=true
WEBHOOK_MAX_RETRIES=5
WEBHOOK_TIMEOUT_MS=30000

# Backup Configuration
DATA_BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=90
ENCRYPTED_BACKUP=true

# JVM Configuration
JAVA_OPTS=-Xmx2g -Xms1g -XX:+UseG1GC -XX:MaxGCPauseMillis=200
