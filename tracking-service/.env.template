# Tracking Service Environment Configuration Template
# Copy this file to .env and update the values for your environment

# Service Configuration
SERVER_PORT=8203
SPRING_PROFILES_ACTIVE=dev
SERVICE_NAME=tracking-service

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=tracking_db
DB_USERNAME=tracking_user
DB_PASSWORD=secure_password
DB_SSL=false
DB_POOL_SIZE=10

# Real-time Tracking Configuration
REAL_TIME_ENABLED=true
LOCATION_UPDATE_INTERVAL_SECONDS=30
GPS_ACCURACY_THRESHOLD_METERS=10
BATCH_LOCATION_UPDATES=true
BATCH_SIZE=100

# WebSocket Configuration
WEBSOCKET_ENABLED=true
WEBSOCKET_ENDPOINT=/tracking-ws
MAX_CONCURRENT_CONNECTIONS=10000
HEARTBEAT_INTERVAL_SECONDS=30

# Geofencing Configuration
GEOFENCING_ENABLED=true
DELIVERY_ZONE_RADIUS_METERS=100
PICKUP_ZONE_RADIUS_METERS=50
WAREHOUSE_ZONE_RADIUS_METERS=200
GEOFENCE_ALERT_ENABLED=true

# Location Storage Configuration
LOCATION_HISTORY_RETENTION_DAYS=90
HIGH_FREQUENCY_STORAGE_HOURS=24
COMPRESSED_STORAGE_ENABLED=true
ANONYMIZE_OLD_LOCATIONS=true

# Notification Configuration
DELIVERY_NOTIFICATIONS=true
PICKUP_NOTIFICATIONS=true
DELAY_NOTIFICATIONS=true
ETA_UPDATE_NOTIFICATIONS=true
NOTIFICATION_THRESHOLD_MINUTES=15

# Security Configuration
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRES_IN=24h
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
LOCATION_PRIVACY_ENABLED=true

# Cache Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=5
LOCATION_CACHE_TTL_SECONDS=300
ROUTE_CACHE_TTL_SECONDS=1800

# Map Integration Configuration
MAP_PROVIDER=google
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
MAPBOX_ACCESS_TOKEN=your_mapbox_token
OSM_ENABLED=false

# Analytics Configuration
ANALYTICS_ENABLED=true
DELIVERY_TIME_ANALYTICS=true
ROUTE_EFFICIENCY_ANALYTICS=true
COURIER_PERFORMANCE_ANALYTICS=true

# Monitoring Configuration
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
PROMETHEUS_METRICS_ENABLED=true
LOCATION_ACCURACY_MONITORING=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_LEVEL_TRACKING=DEBUG
LOG_PATTERN_CONSOLE=%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs/tracking-service.log
LOG_LOCATION_DATA=false

# Service Discovery
EUREKA_SERVER_URL=http://localhost:8761/eureka
EUREKA_INSTANCE_HOSTNAME=localhost

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
LOCATION_UPDATE_RATE_LIMIT_PER_MINUTE=2000
API_RATE_LIMIT_PER_MINUTE=1000

# Integration Configuration
ROUTING_SERVICE_URL=http://routing-service:8202
NOTIFICATION_SERVICE_URL=http://notification-service:8091
COURIER_SERVICE_URL=http://courier-management-service:8201

# Performance Configuration
CONNECTION_POOL_SIZE=50
CONNECTION_TIMEOUT_MS=5000
READ_TIMEOUT_MS=10000
BATCH_PROCESSING_ENABLED=true

# Mobile Configuration
MOBILE_APP_SYNC_INTERVAL_SECONDS=60
OFFLINE_MODE_SUPPORT=true
BACKGROUND_SYNC_ENABLED=true
BATTERY_OPTIMIZATION=true

# Emergency Configuration
PANIC_BUTTON_ENABLED=true
EMERGENCY_CONTACT_ENABLED=true
SOS_LOCATION_SHARING=true
EMERGENCY_RESPONSE_TIME_SECONDS=30

# Data Export Configuration
DATA_EXPORT_ENABLED=true
EXPORT_FORMATS=csv,json,kml
BULK_EXPORT_LIMIT=100000

# JVM Configuration
JAVA_OPTS=-Xmx2g -Xms1g -XX:+UseG1GC -XX:MaxGCPauseMillis=200