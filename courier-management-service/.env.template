# Courier Management Service Environment Configuration Template
# Copy this file to .env and update the values for your environment

# Service Configuration
SERVER_PORT=8201
SPRING_PROFILES_ACTIVE=dev
SERVICE_NAME=courier-management-service

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=courier_management_db
DB_USERNAME=courier_user
DB_PASSWORD=secure_password
DB_SSL=false
DB_POOL_SIZE=20

# Courier Management Configuration
MAX_COURIERS_PER_ZONE=100
MIN_COURIERS_PER_ZONE=5
COURIER_ONBOARDING_ENABLED=true
BACKGROUND_CHECK_REQUIRED=true
TRAINING_REQUIRED=true
DOCUMENT_VERIFICATION_REQUIRED=true

# Courier Status Configuration
AUTO_OFFLINE_MINUTES=30
MAX_IDLE_TIME_MINUTES=60
SHIFT_TRACKING_ENABLED=true
BREAK_TIME_TRACKING=true
MAX_DAILY_HOURS=12

# Fleet Management
VEHICLE_REGISTRATION_REQUIRED=true
INSURANCE_VERIFICATION_REQUIRED=true
VEHICLE_INSPECTION_REQUIRED=true
MAINTENANCE_TRACKING_ENABLED=true
FUEL_TRACKING_ENABLED=true

# Performance Metrics
PERFORMANCE_TRACKING_ENABLED=true
RATING_SYSTEM_ENABLED=true
MIN_RATING_THRESHOLD=3.5
DELIVERY_TIME_TRACKING=true
CUSTOMER_FEEDBACK_ENABLED=true

# Zone Management
ZONE_ASSIGNMENT_ENABLED=true
DYNAMIC_ZONE_ADJUSTMENT=true
ZONE_CAPACITY_MONITORING=true
SURGE_ZONE_DETECTION=true
ZONE_PREFERENCE_ENABLED=true

# Scheduling Configuration
SHIFT_SCHEDULING_ENABLED=true
ADVANCE_SCHEDULING_DAYS=14
MIN_SHIFT_HOURS=4
MAX_SHIFT_HOURS=10
SHIFT_SWAP_ENABLED=true
SHIFT_PICKUP_ENABLED=true

# Communication Configuration
IN_APP_MESSAGING_ENABLED=true
SMS_NOTIFICATIONS_ENABLED=true
PUSH_NOTIFICATIONS_ENABLED=true
EMAIL_NOTIFICATIONS_ENABLED=true
BROADCAST_MESSAGING_ENABLED=true

# Security Configuration
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRES_IN=24h
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
TWO_FACTOR_AUTH_ENABLED=true

# Training & Certification
ONLINE_TRAINING_ENABLED=true
CERTIFICATION_TRACKING=true
SAFETY_TRAINING_REQUIRED=true
COMPLIANCE_TRAINING_REQUIRED=true
REFRESHER_TRAINING_DAYS=180

# Compliance Configuration
LABOR_LAW_COMPLIANCE=true
DRIVER_LICENSE_VERIFICATION=true
CRIMINAL_BACKGROUND_CHECK=true
DRUG_SCREENING_ENABLED=true
MVR_CHECK_ENABLED=true

# Cache Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=4
CACHE_TTL_SECONDS=3600

# Monitoring Configuration
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
PROMETHEUS_METRICS_ENABLED=true
REAL_TIME_TRACKING_ENABLED=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_LEVEL_COURIER_MGMT=DEBUG
LOG_PATTERN_CONSOLE=%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs/courier-management-service.log

# Service Discovery
EUREKA_SERVER_URL=http://localhost:8761/eureka
EUREKA_INSTANCE_HOSTNAME=localhost

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
COURIER_UPDATE_RATE_LIMIT_PER_MINUTE=100
API_RATE_LIMIT_PER_MINUTE=500

# Integration Configuration
TRACKING_SERVICE_URL=http://tracking-service:8203
COMMISSION_SERVICE_URL=http://commission-service:8200
PAYOUT_SERVICE_URL=http://payout-service:8204
NOTIFICATION_SERVICE_URL=http://notification-service:8091
ROUTING_SERVICE_URL=http://routing-service:8202

# Emergency Features
PANIC_BUTTON_ENABLED=true
EMERGENCY_CONTACT_ENABLED=true
LOCATION_SHARING_ENABLED=true
INCIDENT_REPORTING_ENABLED=true

# Analytics Configuration
ANALYTICS_ENABLED=true
PERFORMANCE_ANALYTICS=true
UTILIZATION_TRACKING=true
EARNINGS_ANALYTICS=true

# Support Configuration
IN_APP_SUPPORT_ENABLED=true
CHAT_SUPPORT_ENABLED=true
PHONE_SUPPORT_ENABLED=true
TICKETING_SYSTEM_ENABLED=true

# Incentive Configuration
INCENTIVE_PROGRAM_ENABLED=true
REFERRAL_PROGRAM_ENABLED=true
BONUS_PROGRAM_ENABLED=true
LOYALTY_PROGRAM_ENABLED=true

# Performance Configuration
CONNECTION_POOL_SIZE=30
CONNECTION_TIMEOUT_MS=10000
READ_TIMEOUT_MS=30000

# JVM Configuration
JAVA_OPTS=-Xmx2g -Xms1g -XX:+UseG1GC -XX:MaxGCPauseMillis=200
