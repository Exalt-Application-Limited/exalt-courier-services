# Routing Service Environment Configuration Template
# Copy this file to .env and update the values for your environment

# Service Configuration
SERVER_PORT=8202
SPRING_PROFILES_ACTIVE=dev
SERVICE_NAME=routing-service

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=routing_db
DB_USERNAME=routing_user
DB_PASSWORD=secure_password
DB_SSL=false
DB_POOL_SIZE=10

# Google Maps API Configuration
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
GOOGLE_MAPS_ENABLED=true
GOOGLE_MAPS_DIRECTIONS_ENABLED=true
GOOGLE_MAPS_MATRIX_ENABLED=true
GOOGLE_MAPS_GEOCODING_ENABLED=true

# Route Optimization Configuration
OPTIMIZATION_ALGORITHM=genetic
MAX_STOPS_PER_ROUTE=50
ROUTE_OPTIMIZATION_TIMEOUT_SECONDS=30
DISTANCE_CALCULATION_METHOD=haversine
TRAFFIC_CONSIDERATION_ENABLED=true

# Vehicle Configuration
DEFAULT_VEHICLE_TYPE=van
VEHICLE_CAPACITY_WEIGHT_KG=1000
VEHICLE_CAPACITY_VOLUME_M3=5
FUEL_EFFICIENCY_KM_PER_LITER=12
SPEED_AVERAGE_KMH=40

# Geographic Configuration
DEFAULT_REGION=urban
SUPPORTED_REGIONS=urban,suburban,rural,highway
COORDINATE_SYSTEM=wgs84
DISTANCE_UNIT=km

# Route Constraints
MAX_ROUTE_DISTANCE_KM=200
MAX_ROUTE_DURATION_HOURS=8
BREAK_DURATION_MINUTES=30
MAX_WORKING_HOURS=10
REST_INTERVAL_HOURS=4

# Real-time Configuration
REAL_TIME_TRACKING_ENABLED=true
TRAFFIC_DATA_ENABLED=true
WEATHER_CONSIDERATION_ENABLED=true
ROAD_CLOSURE_MONITORING=true

# Cache Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=4
ROUTE_CACHE_TTL_SECONDS=1800
TRAFFIC_CACHE_TTL_SECONDS=300

# Security Configuration
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRES_IN=24h
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
API_KEY_ENABLED=true

# Monitoring Configuration
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
PROMETHEUS_METRICS_ENABLED=true
ROUTE_PERFORMANCE_TRACKING=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_LEVEL_ROUTING=DEBUG
LOG_PATTERN_CONSOLE=%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs/routing-service.log

# Service Discovery
EUREKA_SERVER_URL=http://localhost:8761/eureka
EUREKA_INSTANCE_HOSTNAME=localhost

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
ROUTE_CALC_RATE_LIMIT_PER_MINUTE=500
API_RATE_LIMIT_PER_MINUTE=1000

# Integration Configuration
GEO_SERVICE_URL=http://geo-location-service:8087
TRACKING_SERVICE_URL=http://tracking-service:8203
COURIER_SERVICE_URL=http://courier-management-service:8201

# Performance Configuration
CONNECTION_POOL_SIZE=20
CONNECTION_TIMEOUT_MS=10000
READ_TIMEOUT_MS=30000
ROUTE_CALCULATION_TIMEOUT_MS=15000

# Algorithm Configuration
GENETIC_ALGORITHM_POPULATION=100
GENETIC_ALGORITHM_GENERATIONS=500
GENETIC_ALGORITHM_MUTATION_RATE=0.1
SIMULATED_ANNEALING_ENABLED=false

# Emergency Configuration
EMERGENCY_REROUTING_ENABLED=true
EMERGENCY_RESPONSE_TIME_MINUTES=5
PRIORITY_DELIVERY_HANDLING=true

# JVM Configuration
JAVA_OPTS=-Xmx2g -Xms1g -XX:+UseG1GC -XX:MaxGCPauseMillis=200