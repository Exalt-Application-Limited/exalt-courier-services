# Corporate Admin Frontend Environment Configuration
# This file contains all environment variables needed for the Corporate Admin React Application
# Copy this file to .env and fill in the appropriate values

# Application Configuration
REACT_APP_NAME=corporate-admin
REACT_APP_VERSION=1.0.0
REACT_APP_ENVIRONMENT=development
REACT_APP_BASE_URL=http://localhost:3000
REACT_APP_PORT=3000

# API Configuration
REACT_APP_API_BASE_URL=http://localhost:8080
REACT_APP_API_TIMEOUT=30000
REACT_APP_API_RETRY_ATTEMPTS=3
REACT_APP_API_RETRY_DELAY=1000

# Authentication Configuration
REACT_APP_AUTH_ENABLED=true
REACT_APP_JWT_TOKEN_KEY=corporate_admin_token
REACT_APP_REFRESH_TOKEN_KEY=corporate_admin_refresh_token
REACT_APP_AUTH_REDIRECT_URL=/login
REACT_APP_SESSION_TIMEOUT=1800000
REACT_APP_REMEMBER_ME_DURATION=604800000

# Corporate Admin Specific Configuration
REACT_APP_CORPORATE_CODE_PREFIX=CORP
REACT_APP_DEFAULT_TIMEZONE=UTC
REACT_APP_DEFAULT_LANGUAGE=en
REACT_APP_CURRENCY_CODE=USD
REACT_APP_DATE_FORMAT=DD/MM/YYYY
REACT_APP_TIME_FORMAT=HH:mm:ss

# Dashboard Configuration
REACT_APP_DASHBOARD_REFRESH_INTERVAL=30000
REACT_APP_REAL_TIME_UPDATES=true
REACT_APP_CHART_ANIMATION_ENABLED=true
REACT_APP_EXPORT_FORMATS=pdf,excel,csv
REACT_APP_MAX_DASHBOARD_WIDGETS=20

# Monitoring and Analytics
REACT_APP_ANALYTICS_ENABLED=true
REACT_APP_PERFORMANCE_MONITORING=true
REACT_APP_ERROR_REPORTING=true
REACT_APP_USER_ACTIVITY_TRACKING=true

# Feature Flags
REACT_APP_FEATURE_BRANCH_MANAGEMENT=true
REACT_APP_FEATURE_COURIER_MANAGEMENT=true
REACT_APP_FEATURE_COMMISSION_TRACKING=true
REACT_APP_FEATURE_PERFORMANCE_REPORTS=true
REACT_APP_FEATURE_REAL_TIME_MONITORING=true
REACT_APP_FEATURE_ADVANCED_ANALYTICS=true
REACT_APP_FEATURE_BULK_OPERATIONS=true
REACT_APP_FEATURE_EXPORT_REPORTS=true

# WebSocket Configuration
REACT_APP_WEBSOCKET_ENABLED=true
REACT_APP_WEBSOCKET_URL=ws://localhost:8080/ws
REACT_APP_WEBSOCKET_RECONNECT_ATTEMPTS=5
REACT_APP_WEBSOCKET_RECONNECT_DELAY=3000

# Map Integration
REACT_APP_MAPS_ENABLED=true
REACT_APP_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
REACT_APP_DEFAULT_MAP_CENTER_LAT=25.2048
REACT_APP_DEFAULT_MAP_CENTER_LNG=55.2708
REACT_APP_DEFAULT_MAP_ZOOM=12

# Notification Configuration
REACT_APP_NOTIFICATIONS_ENABLED=true
REACT_APP_PUSH_NOTIFICATIONS_ENABLED=true
REACT_APP_NOTIFICATION_POSITION=top-right
REACT_APP_NOTIFICATION_DURATION=5000
REACT_APP_SOUND_NOTIFICATIONS=true

# File Upload Configuration
REACT_APP_FILE_UPLOAD_ENABLED=true
REACT_APP_MAX_FILE_SIZE=10485760
REACT_APP_ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx,xlsx,csv
REACT_APP_UPLOAD_CHUNK_SIZE=1048576

# Security Configuration
REACT_APP_ENABLE_HTTPS=false
REACT_APP_ENABLE_CORS=true
REACT_APP_CONTENT_SECURITY_POLICY=default-src 'self'
REACT_APP_SECURE_COOKIES=false
REACT_APP_SAME_SITE_COOKIES=strict

# Performance Configuration
REACT_APP_LAZY_LOADING=true
REACT_APP_CODE_SPLITTING=true
REACT_APP_SERVICE_WORKER_ENABLED=true
REACT_APP_CACHE_ENABLED=true
REACT_APP_CACHE_DURATION=3600000

# Debugging Configuration
REACT_APP_DEBUG_MODE=false
REACT_APP_CONSOLE_LOGGING=true
REACT_APP_NETWORK_LOGGING=false
REACT_APP_REDUX_DEVTOOLS=true

# Theming Configuration
REACT_APP_THEME_MODE=light
REACT_APP_PRIMARY_COLOR=#1976d2
REACT_APP_SECONDARY_COLOR=#dc004e
REACT_APP_CUSTOM_THEME_ENABLED=true
REACT_APP_DARK_MODE_ENABLED=true

# Localization Configuration
REACT_APP_I18N_ENABLED=true
REACT_APP_SUPPORTED_LANGUAGES=en,ar,fr,es,de
REACT_APP_DEFAULT_LANGUAGE=en
REACT_APP_RTL_SUPPORT=true

# Data Configuration
REACT_APP_PAGINATION_SIZE=25
REACT_APP_MAX_SEARCH_RESULTS=100
REACT_APP_SEARCH_DEBOUNCE_DELAY=300
REACT_APP_AUTO_SAVE_INTERVAL=30000

# Corporate Management Configuration
REACT_APP_MAX_BRANCHES_PER_REGION=50
REACT_APP_MAX_COURIERS_PER_BRANCH=100
REACT_APP_COMMISSION_CALCULATION_ENABLED=true
REACT_APP_AUTOMATED_REPORTING_ENABLED=true
REACT_APP_BULK_ACTIONS_ENABLED=true

# Audit and Compliance
REACT_APP_AUDIT_LOGGING=true
REACT_APP_COMPLIANCE_MODE=standard
REACT_APP_DATA_RETENTION_DAYS=365
REACT_APP_GDPR_COMPLIANCE=true

# External Integrations
REACT_APP_EXTERNAL_APIS_ENABLED=true
REACT_APP_THIRD_PARTY_ANALYTICS=false
REACT_APP_SOCIAL_LOGIN_ENABLED=false

# Development Configuration
REACT_APP_MOCK_API_ENABLED=false
REACT_APP_HOT_RELOAD_ENABLED=true
REACT_APP_SOURCE_MAPS_ENABLED=true
REACT_APP_BUNDLE_ANALYZER_ENABLED=false

# Production Configuration
REACT_APP_MINIFICATION_ENABLED=true
REACT_APP_COMPRESSION_ENABLED=true
REACT_APP_TREE_SHAKING_ENABLED=true
REACT_APP_ERROR_BOUNDARY_ENABLED=true