# Courier Onboarding Service Environment Configuration Template
# Copy this file to .env and update the values for your environment

# Service Configuration
SERVER_PORT=8205
SPRING_PROFILES_ACTIVE=dev
SERVICE_NAME=courier-onboarding-service

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=courier_onboarding_db
DB_USERNAME=onboarding_user
DB_PASSWORD=secure_password
DB_SSL=false
DB_POOL_SIZE=15

# Onboarding Process Configuration
ONBOARDING_STEPS_REQUIRED=7
MAX_ONBOARDING_DAYS=30
AUTO_EXPIRE_INCOMPLETE=true
DOCUMENT_UPLOAD_REQUIRED=true
BACKGROUND_CHECK_REQUIRED=true
TRAINING_COMPLETION_REQUIRED=true
VEHICLE_INSPECTION_REQUIRED=true

# Document Management
MAX_DOCUMENT_SIZE_MB=10
ALLOWED_DOCUMENT_TYPES=pdf,jpg,jpeg,png,doc,docx
DOCUMENT_ENCRYPTION_ENABLED=true
DOCUMENT_RETENTION_DAYS=730
OCR_ENABLED=true
AUTO_DOCUMENT_VERIFICATION=true

# Identity Verification
ID_VERIFICATION_REQUIRED=true
FACE_RECOGNITION_ENABLED=true
LIVENESS_CHECK_ENABLED=true
ID_VERIFICATION_PROVIDER=jumio
MANUAL_REVIEW_THRESHOLD=0.85

# Background Check Configuration
CRIMINAL_BACKGROUND_CHECK=true
DRIVING_RECORD_CHECK=true
EMPLOYMENT_VERIFICATION=true
REFERENCE_CHECK_REQUIRED=true
MIN_REFERENCES_REQUIRED=2
BACKGROUND_CHECK_PROVIDER=checkr

# Training Configuration
ONLINE_TRAINING_MODULES=safety,delivery,customer_service,app_usage
TRAINING_COMPLETION_THRESHOLD=80
QUIZ_PASS_PERCENTAGE=75
MAX_QUIZ_ATTEMPTS=3
CERTIFICATE_GENERATION=true
TRAINING_VIDEO_TRACKING=true

# Vehicle Requirements
VEHICLE_AGE_LIMIT_YEARS=10
INSURANCE_VERIFICATION_REQUIRED=true
REGISTRATION_VERIFICATION_REQUIRED=true
VEHICLE_PHOTO_REQUIRED=true
VEHICLE_TYPES_ALLOWED=car,bike,scooter,van

# Contract & Agreement
DIGITAL_CONTRACT_ENABLED=true
E_SIGNATURE_REQUIRED=true
CONTRACT_VERSION=2.1
TERMS_ACCEPTANCE_REQUIRED=true
PRIVACY_POLICY_ACCEPTANCE=true

# Communication Settings
WELCOME_EMAIL_ENABLED=true
SMS_NOTIFICATIONS_ENABLED=true
PROGRESS_NOTIFICATIONS=true
REMINDER_NOTIFICATIONS=true
COMPLETION_NOTIFICATION=true

# Workflow Configuration
APPROVAL_WORKFLOW_ENABLED=true
AUTO_APPROVAL_ENABLED=false
MANUAL_REVIEW_REQUIRED=true
ESCALATION_ENABLED=true
ESCALATION_TIMEOUT_HOURS=48

# Integration Configuration
COURIER_MANAGEMENT_SERVICE_URL=http://courier-management-service:8201
BACKGROUND_CHECK_SERVICE_URL=http://background-check-service:8090
TRAINING_SERVICE_URL=http://training-service:8093
DOCUMENT_SERVICE_URL=http://document-service:8094
NOTIFICATION_SERVICE_URL=http://notification-service:8091

# Security Configuration
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRES_IN=24h
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
ENCRYPTION_KEY=your-encryption-key-here

# Application Review
APPLICATION_REVIEW_SLA_HOURS=24
INCOMPLETE_APPLICATION_REMINDER_DAYS=3,7,14
APPLICATION_EXPIRY_DAYS=30
REAPPLICATION_COOLDOWN_DAYS=90

# Compliance Configuration
AGE_VERIFICATION_REQUIRED=true
MINIMUM_AGE_REQUIREMENT=18
RIGHT_TO_WORK_VERIFICATION=true
LICENSE_VERIFICATION_REQUIRED=true
INSURANCE_MINIMUM_COVERAGE=100000

# Payment Setup
BANK_ACCOUNT_SETUP_REQUIRED=true
PAYMENT_METHOD_VERIFICATION=true
TAX_FORM_COLLECTION=true
W9_FORM_REQUIRED=true
DIRECT_DEPOSIT_SETUP=true

# Equipment & Supplies
EQUIPMENT_CHECKLIST_ENABLED=true
STARTER_KIT_ELIGIBLE=true
UNIFORM_REQUIRED=false
DELIVERY_BAG_REQUIRED=true
PHONE_MOUNT_REQUIRED=true

# Cache Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=7
CACHE_TTL_SECONDS=3600

# Monitoring Configuration
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
PROMETHEUS_METRICS_ENABLED=true
CONVERSION_TRACKING=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_LEVEL_ONBOARDING=DEBUG
LOG_PATTERN_CONSOLE=%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs/courier-onboarding-service.log

# Service Discovery
EUREKA_SERVER_URL=http://localhost:8761/eureka
EUREKA_INSTANCE_HOSTNAME=localhost

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
APPLICATION_SUBMISSION_RATE_LIMIT_PER_DAY=3
DOCUMENT_UPLOAD_RATE_LIMIT_PER_HOUR=20
API_RATE_LIMIT_PER_MINUTE=300

# Analytics Configuration
ANALYTICS_ENABLED=true
CONVERSION_FUNNEL_TRACKING=true
DROP_OFF_ANALYSIS=true
TIME_TO_COMPLETE_TRACKING=true

# Quality Assurance
QA_REVIEW_ENABLED=true
RANDOM_AUDIT_PERCENTAGE=10
FRAUD_DETECTION_ENABLED=true
DUPLICATE_APPLICATION_CHECK=true

# Performance Configuration
CONNECTION_POOL_SIZE=20
CONNECTION_TIMEOUT_MS=10000
READ_TIMEOUT_MS=30000

# JVM Configuration
JAVA_OPTS=-Xmx1g -Xms512m -XX:+UseG1GC -XX:MaxGCPauseMillis=200