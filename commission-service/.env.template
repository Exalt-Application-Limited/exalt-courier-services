# Commission Service Environment Configuration Template
# Copy this file to .env and update the values for your environment

# Service Configuration
SERVER_PORT=8200
SPRING_PROFILES_ACTIVE=dev
SERVICE_NAME=commission-service

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=commission_db
DB_USERNAME=commission_user
DB_PASSWORD=secure_password
DB_SSL=false
DB_POOL_SIZE=10

# Commission Calculation Configuration
DEFAULT_COMMISSION_RATE=0.05
MIN_COMMISSION_RATE=0.01
MAX_COMMISSION_RATE=0.15
COMMISSION_CALCULATION_METHOD=percentage
FLAT_FEE_ENABLED=true
TIERED_COMMISSION_ENABLED=true

# Payment Configuration
PAYMENT_PROCESSING_ENABLED=true
AUTO_PAYMENT_ENABLED=true
PAYMENT_SCHEDULE=weekly
MINIMUM_PAYOUT_AMOUNT=50.00
CURRENCY=USD

# Courier Configuration
COURIER_RATING_THRESHOLD=4.0
PERFORMANCE_BONUS_ENABLED=true
BONUS_CALCULATION_PERIOD=monthly
HIGH_PERFORMER_BONUS_RATE=0.02

# Region-Based Configuration
REGIONAL_COMMISSION_ENABLED=true
URBAN_COMMISSION_RATE=0.05
SUBURBAN_COMMISSION_RATE=0.06
RURAL_COMMISSION_RATE=0.07

# Time-Based Configuration
PEAK_HOUR_BONUS_ENABLED=true
PEAK_HOUR_BONUS_RATE=0.01
WEEKEND_BONUS_ENABLED=true
WEEKEND_BONUS_RATE=0.015
HOLIDAY_BONUS_ENABLED=true
HOLIDAY_BONUS_RATE=0.02

# Distance-Based Configuration
DISTANCE_COMMISSION_ENABLED=true
SHORT_DISTANCE_RATE=0.04
MEDIUM_DISTANCE_RATE=0.05
LONG_DISTANCE_RATE=0.06
DISTANCE_THRESHOLD_SHORT_KM=5
DISTANCE_THRESHOLD_MEDIUM_KM=15

# Service Type Configuration
STANDARD_DELIVERY_RATE=0.05
EXPRESS_DELIVERY_RATE=0.07
SAME_DAY_DELIVERY_RATE=0.08
OVERNIGHT_DELIVERY_RATE=0.06

# Security Configuration
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRES_IN=24h
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
API_KEY_ENABLED=true

# Cache Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=3
CACHE_TTL_SECONDS=3600

# Monitoring Configuration
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
PROMETHEUS_METRICS_ENABLED=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_LEVEL_COMMISSION=DEBUG
LOG_PATTERN_CONSOLE=%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs/commission-service.log

# Service Discovery
EUREKA_SERVER_URL=http://localhost:8761/eureka
EUREKA_INSTANCE_HOSTNAME=localhost

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
COMMISSION_CALC_RATE_LIMIT_PER_MINUTE=1000
API_RATE_LIMIT_PER_MINUTE=500

# Integration Configuration
PAYMENT_SERVICE_URL=http://payment-processing-service:8092
COURIER_SERVICE_URL=http://courier-management-service:8201
NOTIFICATION_SERVICE_URL=http://notification-service:8091

# Audit Configuration
AUDIT_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=365
COMMISSION_CHANGES_AUDIT=true

# Performance Configuration
CONNECTION_POOL_SIZE=20
CONNECTION_TIMEOUT_MS=10000
READ_TIMEOUT_MS=30000

# JVM Configuration
JAVA_OPTS=-Xmx1g -Xms512m -XX:+UseG1GC -XX:MaxGCPauseMillis=200
