# International Shipping Service Environment Configuration Template
# Copy this file to .env and update the values for your environment

# Service Configuration
SERVER_PORT=8206
SPRING_PROFILES_ACTIVE=dev
SERVICE_NAME=international-shipping-service

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=international_shipping_db
DB_USERNAME=intl_shipping_user
DB_PASSWORD=secure_password
DB_SSL=false
DB_POOL_SIZE=25

# International Shipping Configuration
SUPPORTED_COUNTRIES=US,CA,MX,UK,FR,DE,JP,AU,IN,BR
DEFAULT_CURRENCY=USD
MULTI_CURRENCY_ENABLED=true
CUSTOMS_INTEGRATION_ENABLED=true
DUTY_CALCULATION_ENABLED=true
CROSS_BORDER_COMPLIANCE=true

# Customs & Documentation
CUSTOMS_DECLARATION_REQUIRED=true
COMMERCIAL_INVOICE_GENERATION=true
PACKING_LIST_GENERATION=true
CERTIFICATE_OF_ORIGIN=true
EXPORT_LICENSE_CHECK=true
IMPORT_PERMIT_CHECK=true

# Carrier Integration
DHL_ENABLED=true
DHL_ACCOUNT_NUMBER=your_dhl_account
DHL_API_KEY=your_dhl_api_key
FEDEX_ENABLED=true
FEDEX_ACCOUNT_NUMBER=your_fedex_account
FEDEX_API_KEY=your_fedex_api_key
UPS_ENABLED=true
UPS_ACCOUNT_NUMBER=your_ups_account
UPS_API_KEY=your_ups_api_key
USPS_ENABLED=true
USPS_USER_ID=your_usps_userid

# Shipping Zones & Rates
ZONE_BASED_PRICING=true
WEIGHT_BASED_PRICING=true
DIMENSIONAL_WEIGHT_ENABLED=true
FUEL_SURCHARGE_ENABLED=true
REMOTE_AREA_SURCHARGE=true
RESIDENTIAL_SURCHARGE=true

# Currency & Exchange
CURRENCY_CONVERSION_ENABLED=true
EXCHANGE_RATE_PROVIDER=openexchangerates
EXCHANGE_RATE_API_KEY=your_exchange_rate_key
RATE_UPDATE_FREQUENCY_HOURS=6
CURRENCY_MARKUP_PERCENTAGE=2.5

# Tax & Duty Configuration
VAT_CALCULATION_ENABLED=true
GST_CALCULATION_ENABLED=true
DUTY_CALCULATOR_ENABLED=true
DE_MINIMIS_CHECK_ENABLED=true
TAX_INCLUSIVE_PRICING=false

# Compliance & Regulations
EXPORT_CONTROL_CHECK=true
SANCTIONS_SCREENING=true
DENIED_PARTY_SCREENING=true
RESTRICTED_GOODS_CHECK=true
DANGEROUS_GOODS_HANDLING=true
LITHIUM_BATTERY_DECLARATION=true

# Tracking Configuration
MULTI_CARRIER_TRACKING=true
REAL_TIME_TRACKING_ENABLED=true
MILESTONE_TRACKING_ENABLED=true
CUSTOMS_CLEARANCE_TRACKING=true
DELIVERY_CONFIRMATION_REQUIRED=true

# Address Validation
INTERNATIONAL_ADDRESS_VALIDATION=true
ADDRESS_STANDARDIZATION=true
PO_BOX_RESTRICTION_CHECK=true
MILITARY_ADDRESS_SUPPORT=true
ADDRESS_VALIDATION_PROVIDER=addressvalidator

# Package Configuration
MAX_PACKAGE_WEIGHT_KG=70
MAX_PACKAGE_LENGTH_CM=270
MAX_PACKAGE_GIRTH_CM=330
OVERSIZE_HANDLING_ENABLED=true
MULTI_PIECE_SHIPMENT_SUPPORT=true

# Documentation Storage
DOCUMENT_STORAGE_ENABLED=true
DOCUMENT_RETENTION_YEARS=7
DOCUMENT_ENCRYPTION_ENABLED=true
S3_BUCKET_NAME=intl-shipping-documents
AWS_REGION=us-east-1

# Insurance Configuration
SHIPPING_INSURANCE_ENABLED=true
DEFAULT_INSURANCE_COVERAGE=100
MAX_INSURANCE_COVERAGE=50000
INSURANCE_PROVIDER=shipsurance
AUTO_INSURANCE_THRESHOLD=500

# Returns Management
INTERNATIONAL_RETURNS_ENABLED=true
RETURN_LABEL_GENERATION=true
CUSTOMS_CLEARANCE_FOR_RETURNS=true
RETURN_MERCHANDISE_AUTH=true
PREPAID_RETURN_LABELS=true

# Security Configuration
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRES_IN=24h
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
API_KEY_ENCRYPTION=true

# Notification Configuration
SHIPMENT_NOTIFICATIONS_ENABLED=true
CUSTOMS_DELAY_NOTIFICATIONS=true
DELIVERY_NOTIFICATIONS=true
EMAIL_NOTIFICATIONS_ENABLED=true
SMS_NOTIFICATIONS_ENABLED=true
WEBHOOK_NOTIFICATIONS_ENABLED=true

# Integration Configuration
CUSTOMS_BROKER_API_URL=http://customs-broker-service:8095
TAX_SERVICE_URL=http://tax-calculation-service:8096
CURRENCY_SERVICE_URL=http://currency-service:8097
NOTIFICATION_SERVICE_URL=http://notification-service:8091

# Rate Shopping Configuration
RATE_SHOPPING_ENABLED=true
CARRIER_SELECTION_OPTIMIZATION=true
TRANSIT_TIME_PRIORITY=medium
COST_PRIORITY=high
SERVICE_LEVEL_MATCHING=true

# Cache Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=8
RATE_CACHE_TTL_SECONDS=3600
ADDRESS_CACHE_TTL_SECONDS=86400

# Monitoring Configuration
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
PROMETHEUS_METRICS_ENABLED=true
SHIPMENT_SLA_MONITORING=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_LEVEL_INTL_SHIPPING=DEBUG
LOG_PATTERN_CONSOLE=%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs/international-shipping-service.log

# Service Discovery
EUREKA_SERVER_URL=http://localhost:8761/eureka
EUREKA_INSTANCE_HOSTNAME=localhost

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
SHIPMENT_CREATION_RATE_LIMIT_PER_MINUTE=100
RATE_QUOTE_LIMIT_PER_MINUTE=500
API_RATE_LIMIT_PER_MINUTE=1000

# Batch Processing
BATCH_SHIPMENT_ENABLED=true
MAX_BATCH_SIZE=100
BATCH_PROCESSING_CRON=0 0 */2 * * *
EDI_INTEGRATION_ENABLED=true

# Performance Configuration
CONNECTION_POOL_SIZE=30
CONNECTION_TIMEOUT_MS=15000
READ_TIMEOUT_MS=45000
CARRIER_API_TIMEOUT_MS=30000

# JVM Configuration
JAVA_OPTS=-Xmx2g -Xms1g -XX:+UseG1GC -XX:MaxGCPauseMillis=200
