{
  "name": "ExaltCourierMobile",
  "version": "1.0.0",
  "private": true,
  "description": "Enhanced mobile application for Exalt Courier customers - Full-featured React Native app",
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "test": "jest",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "postinstall": "react-native setup-ios-permissions && pod-install",
    "clean": "cd android && ./gradlew clean && cd ../ios && xcodebuild clean && cd ..",
    "build:android": "cd android && ./gradlew assembleRelease",
    "build:ios": "cd ios && xcodebuild -workspace ExaltCourierMobile.xcworkspace -scheme ExaltCourierMobile archive"
  },
  "dependencies": {
    "react": "18.2.0",
    "react-native": "0.72.6",
    "@react-navigation/native": "^6.1.9",
    "@react-navigation/native-stack": "^6.9.17",
    "@react-navigation/bottom-tabs": "^6.5.11",
    "@react-navigation/drawer": "^6.6.6",
    "react-native-screens": "^3.27.0",
    "react-native-safe-area-context": "^4.7.4",
    "react-native-gesture-handler": "^2.13.4",
    "react-native-reanimated": "^3.5.4",
    "@reduxjs/toolkit": "^1.9.7",
    "react-redux": "^8.1.3",
    "axios": "^1.6.2",
    "react-native-async-storage": "^1.19.5",
    "react-native-keychain": "^8.1.2",
    "react-native-vector-icons": "^10.0.2",
    "react-native-maps": "^1.8.0",
    "react-native-geolocation-service": "^5.3.1",
    "react-native-permissions": "^3.10.1",
    "react-native-camera": "^4.2.1",
    "react-native-image-picker": "^5.7.0",
    "react-native-document-picker": "^9.0.1",
    "react-native-push-notification": "^8.1.1",
    "@notifee/react-native": "^7.8.0",
    "react-native-splash-screen": "^3.3.0",
    "react-native-config": "^1.5.1",
    "react-native-linear-gradient": "^2.8.3",
    "react-native-svg": "^14.0.0",
    "react-native-webview": "^13.6.3",
    "react-hook-form": "^7.47.0",
    "react-native-paper": "^5.11.1",
    "react-native-elements": "^3.4.3",
    "react-native-date-picker": "^4.3.3",
    "react-native-modal": "^13.0.1",
    "react-native-keyboard-aware-scroll-view": "^0.9.5",
    "@react-native-community/netinfo": "^11.1.0",
    "react-native-device-info": "^10.11.0",
    "react-native-share": "^10.0.2",
    "react-native-pdf": "^6.7.1",
    "react-native-print": "^0.8.0",
    "socket.io-client": "^4.6.1"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-env": "^7.20.0",
    "@babel/runtime": "^7.20.0",
    "@react-native/eslint-config": "^0.72.2",
    "@react-native/metro-config": "^0.72.11",
    "@tsconfig/react-native": "^3.0.0",
    "@types/react": "^18.0.24",
    "@types/react-native": "^0.72.3",
    "@types/react-native-vector-icons": "^6.4.15",
    "@types/react-test-renderer": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "@typescript-eslint/parser": "^5.37.0",
    "babel-jest": "^29.2.1",
    "eslint": "^8.19.0",
    "jest": "^29.2.1",
    "metro-react-native-babel-preset": "0.76.8",
    "prettier": "^2.4.1",
    "react-test-renderer": "18.2.0",
    "typescript": "4.8.4"
  },
  "engines": {
    "node": ">=16"
  },
  "jest": {
    "preset": "react-native",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "reactNativePermissionsIOS": [
    "Camera",
    "LocationAlways",
    "LocationWhenInUse",
    "Notifications",
    "PhotoLibrary"
  ]
}