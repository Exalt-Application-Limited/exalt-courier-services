# =================================
# COURIER LOCATION TRACKER SERVICE CONFIGURATION
# =================================

# Server Configuration
PORT=3004
NODE_ENV=development
SERVICE_NAME=courier-location-tracker
API_VERSION=v1

# Database Configuration - MongoDB
DB_HOST=localhost
DB_PORT=27017
DB_NAME=courier_location_tracker_db
DB_USER=tracker_user
DB_PASS=tracker_password
DB_AUTH_SOURCE=admin
DB_SSL=false
DB_POOL_SIZE=15
DB_CONNECTION_TIMEOUT=5000
DB_SERVER_SELECTION_TIMEOUT=5000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=3
REDIS_PREFIX=courier:tracker:
REDIS_TTL=300
REDIS_CONNECTION_TIMEOUT=5000

# Location Tracking Configuration
TRACKING_ENABLED=true
LOCATION_UPDATE_INTERVAL=30000
HIGH_PRECISION_MODE=true
GPS_ACCURACY_THRESHOLD=10
LOCATION_HISTORY_RETENTION_DAYS=30
BATCH_LOCATION_UPDATES=true

# Real-time Updates
WEBSOCKET_ENABLED=true
WEBSOCKET_PORT=3014
SOCKET_IO_ENABLED=true
SSE_ENABLED=true
PUSH_NOTIFICATIONS_ENABLED=true

# Geofencing & Zones
GEOFENCING_ENABLED=true
DELIVERY_ZONES_ENABLED=true
ZONE_ENTRY_NOTIFICATIONS=true
ZONE_EXIT_NOTIFICATIONS=true
MAX_ACTIVE_GEOFENCES=50

# Privacy & Security
LOCATION_ANONYMIZATION=false
DATA_ENCRYPTION_AT_REST=true
LOCATION_SHARING_CONSENT_REQUIRED=true
GDPR_COMPLIANCE_MODE=true
LOCATION_DATA_RETENTION_POLICY=30

# JWT Authentication
JWT_SECRET=your_jwt_secret_key_here_min_32_chars
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000
JWT_ISSUER=courier-location-tracker
JWT_AUDIENCE=courier-system

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3004
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=Content-Type,Authorization,X-Requested-With
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# Caching Configuration
LOCATION_CACHE_ENABLED=true
LOCATION_CACHE_TTL=60
ROUTE_PROGRESS_CACHE_TTL=300
DRIVER_STATUS_CACHE_TTL=120

# Message Queue Configuration
MESSAGE_QUEUE_TYPE=kafka
KAFKA_BROKERS=localhost:9092
KAFKA_TOPIC_LOCATION_UPDATES=courier.location.updates
KAFKA_TOPIC_GEOFENCE_EVENTS=courier.geofence.events
KAFKA_CONSUMER_GROUP=location-tracker-consumer

# Service Discovery
EUREKA_HOST=localhost
EUREKA_PORT=8761
EUREKA_INSTANCE_ID=courier-location-tracker-3004
SERVICE_REGISTRY_ENABLED=true

# External Service URLs
GEO_ROUTING_SERVICE_URL=http://localhost:3003
NETWORK_LOCATIONS_SERVICE_URL=http://localhost:3005
NOTIFICATION_SERVICE_URL=http://localhost:3010

# Monitoring and Health Checks
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health
METRICS_ENABLED=true
METRICS_PATH=/metrics
PERFORMANCE_MONITORING=true
LOCATION_METRICS_ENABLED=true

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs/courier-location-tracker.log
LOG_FILE_MAX_SIZE=10485760
LOG_FILE_MAX_FILES=5
LOG_CONSOLE_ENABLED=true

# Security Configuration
HELMET_ENABLED=true
BODY_PARSER_LIMIT=10mb
REQUEST_TIMEOUT=30000
TRUST_PROXY=false
LOCATION_API_KEY_REQUIRED=true

# Error Handling
ERROR_STACK_TRACE=true
ERROR_REPORTING_ENABLED=true
SENTRY_DSN=

# Performance Configuration
CLUSTER_MODE=false
WORKERS_COUNT=4
GRACEFUL_SHUTDOWN_TIMEOUT=10000
KEEP_ALIVE_TIMEOUT=5000

# Location Analytics
ANALYTICS_ENABLED=true
ROUTE_OPTIMIZATION_ANALYTICS=true
DELIVERY_TIME_PREDICTION=true
TRAFFIC_PATTERN_ANALYSIS=true
DRIVER_BEHAVIOR_ANALYTICS=true

# Mobile App Integration
MOBILE_API_ENABLED=true
OFFLINE_MODE_SUPPORT=true
BACKGROUND_LOCATION_TRACKING=true
BATTERY_OPTIMIZATION=true
DATA_USAGE_OPTIMIZATION=true

# External APIs
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
MAPBOX_API_KEY=your_mapbox_api_key_here
REVERSE_GEOCODING_ENABLED=true
GEOCODING_CACHE_TTL=86400

# Alert System
LOCATION_ALERTS_ENABLED=true
ROUTE_DEVIATION_ALERTS=true
EXTENDED_STOP_ALERTS=true
SPEED_LIMIT_ALERTS=true
ALERT_THRESHOLD_METERS=100

# Data Export & Integration
DATA_EXPORT_ENABLED=true
WEBHOOK_NOTIFICATIONS=true
API_WEBHOOKS_ENABLED=true
THIRD_PARTY_INTEGRATIONS=true

# API Documentation
SWAGGER_ENABLED=true
SWAGGER_PATH=/api-docs
API_DOCS_TITLE=Courier Location Tracker API
API_DOCS_VERSION=1.0.0

# Development Configuration
DEBUG=courier:tracker:*
HOT_RELOAD=true
WATCH_FILES=true
